---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { getCollection } from "astro:content";
const posts = await getCollection("posts");
---

<Layout>
  <div class="post-grid">
    {
      posts.map((post) => {
        const lang = post.data.isHebTitle ? "he" : "en";
        return (
          <div id={post.id} class="post-grid-card">
            <a href={`/thechoogs/posts/${post.id}`}>
              <Image
                class="post-grid-image"
                src={post.data.coverImage}
                alt={post.data.title}
                title={post.data.title}
              />
              <h2 lang={lang}>{post.data.title}</h2>
            </a>
          </div>
        );
      })
    }
  </div>
</Layout>

<style>
  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 20px;
    padding: 10px;
    justify-content: center;
    align-items: center;
    min-width: 300px;
  }

  .post-grid-card {
    border: 1px solid #ddd;
    border-radius: 8px;
    overflow: hidden;
    background-color: #f9f9f9;
    aspect-ratio: 3 / 4;
    max-width: 500px;
    place-self: center;
    position: relative;
    width: 100%;
  }

  .post-grid-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .post-grid-card h2 {
    font-family: "Pacifico";
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    color: rgb(255, 248, 211);
    padding: 30px 20px;
    z-index: 2;
    text-align: center;
    font-size: 3.5rem;
    height: auto;
    text-shadow: 2px 2px 3px rgb(112, 0, 19);
    font-weight: 400;
    line-height: 1.2;
    word-wrap: break-word;
    margin: 0;
    /* Gradient overlay behind text */
    background: linear-gradient(to top, rgba(0, 0, 0, 0.275), rgba(0, 0, 0, 0));
    /* backdrop-filter: blur(1.8px); */
  }

  .post-grid-card h2:lang(he) {
    font-family: "Gveret Levin", serif;
    font-size: 3rem;
    font-weight: 400;
    direction: rtl;
  }
</style>
